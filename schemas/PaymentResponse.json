{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://www.w3.org/Payments/WG/schemas/PaymentResponse",
  "title": "Payment Response",
  "type": "object",
  "properties": {
    "type": {
      "id": "https://www.w3.org/Payments/WG/schemas/PaymentResponse/type",
      "type": "string"
    },
    "description": {
      "id": "https://www.w3.org/Payments/WG/schemas/PaymentResponse/description",
      "type": "string"
    },
    "payment": {
      "id": "https://www.w3.org/Payments/WG/schemas/PaymentResponse/payment",
      "type": "object",
      "properties": {
        "paymentMethod": {
          "id": "https://www.w3.org/Payments/WG/schemas/PaymentResponse/payment/paymentMethod",
          "type": "string"
        },
        "paymentAmount": {
          "id": "https://www.w3.org/Payments/WG/schemas/PaymentResponse/payment/paymentAmount",
          "type": "object",
          "properties": {
            "amount": {
              "id": "https://www.w3.org/Payments/WG/schemas/PaymentResponse/payment/paymentAmount/amount",
              "type": "string",
              "pattern": "^-?[0-9]+(\.[0-9]+)?$"
            },
            "currency": {
              "id": "https://www.w3.org/Payments/WG/schemas/PaymentResponse/payment/paymentAmount/currency",
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": [
    "payment"
  ]
}
